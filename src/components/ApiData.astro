---
import Layout from '../layouts/Layout.astro';
type User = {
	id: number;
	name: string;
	email: string;
}
const datos = await fetch('https://jsonplaceholder.typicode.com/users');
const data : User[]= await datos.json();
console.log(data)

//prueba 2
const response = ["data","json","javascript"];

import datosJson from "../components/data/datos.json";

---

<div id="data-container">
    <h2 class="text-3xl text-center font-bold py-10">Hola,aqui mostraremos los datos consumidos desde una api</h2>
    <h3  class="text-center font-bold">como un array</h3>
	<ul>
		{response.map((i) => <li>{i}</li> )}
	</ul>
 <h3 class="text-3xl text-center font-bold py-10">con una llamada a la api</h3>
 	
 {data.map((i) => <div class="text-left py-4"><p class="text-md text-orange-700">Nombre: <strong>{i.name}</strong></p><p>Correo Electronico: <strong>{i.email}</strong></p> </div>)}
    
	<h3 class="text-center font-bold"> Imagenes</h3>
        {datosJson.map((i) => 
		 <div><p class="text-left py-4">
			<p>{i.title}</p>
			<p>{i.thumbnailUrl}</p> 
			</div>
     
        )}
</div>